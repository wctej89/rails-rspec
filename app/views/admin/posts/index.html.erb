<h1>Welcome to the admin panel!</h1>

<%= link_to "New Post", new_admin_post_url %>

<% if @posts.any? %>
  <h4>All posts:</h4>
  <table>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}", post %></td>
        <td>
          <%= link_to "Edit", edit_admin_post_url(post) %>
          <%= button_to "Delete", admin_post_path(post), :method => :delete, :confirm => "Are you sure you want to delete this post?"%>
        </td>
      </tr>
    <% end %>
  </table
<% end %>
